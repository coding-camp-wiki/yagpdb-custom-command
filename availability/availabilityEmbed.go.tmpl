{{ $embedTitle := "Staff In/Out" }}
{{ $embedDescription := "Which staff members are currently available to help?" }}
{{ $embedColor := 12426513 }}

{{ $fieldAvailableName := "Ready to Help!" }}
{{ $fieldAwayName := "Away" }}
{{ $fieldEmptyValue := "(none)" }}
{{ $fieldEmptyAvailable := (sdict "name" $fieldAvailableName "value" $fieldEmptyValue "inline" true) }}
{{ $fieldEmptyAway := (sdict "name" $fieldAwayName "value" $fieldEmptyValue "inline" true) }}
{{ $fieldsEmpty := (cslice
        $fieldEmptyAvailable
        $fieldEmptyAway
    )
}}

{{ $targetMessageId := .ExecData.targetMessageId }}
{{ $operation := .ExecData.operation }}
{{ $isReactionAdded := .ExecData.isReactionAdded }}
{{ $targetUser := .ExecData.user }}

{{ $embed := (sdict
    "title" $embedTitle
    "description" $embedDescription
    "color" $embedColor
) }}

{{/* initial setup */}}
{{ if not .ExecData }}
    {{ $embed.Set "fields" $fieldsEmpty }}
    {{ $embed := cembed $embed }}

    {{ sendMessage nil $embed }}
{{ else }}
    {{ $targetMessage := getMessage nil $targetMessageId }}

    {{ range $index, $embed := $targetMessage.Embeds }}
        {{ if eq $embed.Title $embedTitle }}

        {{ end }}
    {{ end }}
{{ end }}
